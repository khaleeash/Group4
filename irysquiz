// DOM Elements
const menuItemsContainer = document.getElementById("menu-items");
const cartIcon = document.getElementById("cart-icon");
const cartModal = document.getElementById("cart-modal");
const closeCart = document.getElementById("close-cart");
const cartItemsContainer = document.getElementById("cart-items");
const cartCount = document.getElementById("cart-count");
const cartTotal = document.getElementById("cart-total");
const checkoutBtn = document.getElementById("checkout-btn");
const overlay = document.getElementById("overlay");
const categoryBtns = document.querySelectorAll(".category-btn");
const contactForm = document.getElementById("contact-form");
const contactSuccessMessage = document.getElementById("contact-success");
const loginModal = document.getElementById("login-modal");
const loginForm = document.getElementById("login-form");
const loginError = document.getElementById("login-error");
const loginLink = document.getElementById("login-link");
const userInfo = document.getElementById("user-info");
const userName = document.getElementById("user-name");
const transactionHistory = document.getElementById("transaction-history");
const transactionItems = document.getElementById("transaction-items");
const signupModal = document.getElementById("signup-modal");
const signupForm = document.getElementById("signup-form");
const signupError = document.getElementById("signup-error");
const signupSuccess = document.getElementById("signup-success");
const showSignupLink = document.getElementById("show-signup-link");
const showLoginLink = document.getElementById("show-login-link");

// User accounts and state
let cart = [];
let transactions = [];
let isLoggedIn = false;
let currentUser = null;
let userAccounts = [
    { email: "aminuashiru71@gmail.com", password: "1234", name: "Aminu Ashiru" }
];

// Display Menu Items
function displayMenuItems(menuItems) {
    menuItemsContainer.innerHTML = menuItems.map(item => `
        <div class="menu-item" data-category="${item.category}">
            <div class="item-image">
                <img src="${item.image}" alt="${item.name}">
            </div>
            <div class="item-info">
                <h3>${item.name}</h3>
                <p>${item.description}</p>
                <div class="item-price">
                    <span class="price">₦${item.price.toLocaleString()}</span>
                    <button class="add-to-cart" data-id="${item.id}">Add to Cart</button>
                </div>
            </div>
        </div>
    `).join("");
    
    // Add event listeners to "Add to Cart" buttons
    document.querySelectorAll(".add-to-cart").forEach(button => {
        button.addEventListener("click", addToCart);
    });
}

// Add to Cart
function addToCart(e) {
    const id = parseInt(e.target.dataset.id);
    const item = menuData.find(item => item.id === id);
    
    // Check if item already in cart
    const existingItem = cart.find(item => item.id === id);
    
    if (existingItem) {
        existingItem.quantity += 1;
    } else {
        cart.push({
            ...item,
            quantity: 1
        });
    }
    
    updateCart();
}

// Update Cart
function updateCart() {
    // Update cart count
    const totalItems = cart.reduce((total, item) => total + item.quantity, 0);
    cartCount.textContent = totalItems;
    
    // Update cart items display
    cartItemsContainer.innerHTML = cart.map(item => `
        <div class="cart-item" data-id="${item.id}">
            <div class="cart-item-image">
                <img src="${item.image}" alt="${item.name}">
            </div>
            <div class="cart-item-details">
                <h4>${item.name}</h4>
                <div class="cart-item-price">₦${item.price.toLocaleString()}</div>
                <div class="cart-item-quantity">
                    <button class="quantity-btn decrease">-</button>
                    <span class="quantity">${item.quantity}</span>
                    <button class="quantity-btn increase">+</button>
                </div>
                <button class="remove-item">Remove</button>
            </div>
        </div>
    `).join("");
    
    // Update cart total
    const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
    cartTotal.textContent = total.toLocaleString();
    
    // Add event listeners to quantity buttons
    document.querySelectorAll(".decrease").forEach(button => {
        button.addEventListener("click", decreaseQuantity);
    });
    
    document.querySelectorAll(".increase").forEach(button => {
        button.addEventListener("click", increaseQuantity);
    });
    
    document.querySelectorAll(".remove-item").forEach(button => {
        button.addEventListener("click", removeItem);
    });
    
    // Show transaction history if user is logged in
    if (isLoggedIn) {
        transactionHistory.style.display = 'block';
        updateTransactionHistory();
    } else {
        transactionHistory.style.display = 'none';
    }
}

// Update Transaction History
function updateTransactionHistory() {
    if (transactions.length === 0) {
        transactionItems.innerHTML = '<p>No transactions yet.</p>';
        return;
    }
    
    transactionItems.innerHTML = transactions.map(transaction => `
        <div class="transaction-item">
            <div class="transaction-date">${transaction.date}</div>
            <div class="transaction-items">
                ${transaction.items.map(item => `${item.quantity}x ${item.name}`).join(', ')}
            </div>
            <div class="transaction-total">₦${transaction.total.toLocaleString()}</div>
        </div>
    `).join('');
}

// Decrease Quantity
function decreaseQuantity(e) {
    const id = parseInt(e.target.closest(".cart-item").dataset.id);
    const item = cart.find(item => item.id === id);
    
    if (item.quantity > 1) {
        item.quantity -= 1;
    } else {
        cart = cart.filter(item => item.id !== id);
    }
    
    updateCart();
}

// Increase Quantity
function increaseQuantity(e) {
    const id = parseInt(e.target.closest(".cart-item").dataset.id);
    const item = cart.find(item => item.id === id);
    item.quantity += 1;
    updateCart();
}

// Remove Item
function removeItem(e) {
    const id = parseInt(e.target.closest(".cart-item").dataset.id);
    cart = cart.filter(item => item.id !== id);
    updateCart();
}

// Filter Menu by Category
function filterMenu(category) {
    // Update active button
    categoryBtns.forEach(btn => btn.classList.remove("active"));
    document.querySelector(`.category-btn[data-category="${category}"]`).classList.add("active");
    
    if (category === "all") {
        displayMenuItems(menuData);
    } else {
        const filteredItems = menuData.filter(item => item.category === category);
        displayMenuItems(filteredItems);
    }
    
    // Show the menu tab
    showTabByHash('#menu');
}

// Checkout
function checkout() {
    if (cart.length === 0) {
        alert("Your cart is empty!");
        return;
    }
    
    // Calculate total
    const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
    
    // Add to transactions if logged in
    if (isLoggedIn) {
        const transaction = {
            date: new Date().toLocaleString(),
            items: [...cart],
            total: total
        };
        transactions.push(transaction);
    }
    
    alert(`Order placed! Total: ₦${total.toLocaleString()}\nThank you for choosing McDonald's!`);
    cart = [];
    updateCart();
    closeCartModal();
}

// Open Cart Modal
function openCartModal() {
    cartModal.classList.add("active");
    overlay.classList.add("active");
    document.body.style.overflow = "hidden";
}

// Close Cart Modal
function closeCartModal() {
    cartModal.classList.remove("active");
    overlay.classList.remove("active");
    document.body.style.overflow = "auto";
}

// Open Login Modal
function openLoginModal() {
    loginModal.classList.add("active");
    overlay.classList.add("active");
    document.body.style.overflow = "hidden";
}

// Close Login Modal
function closeLoginModal() {
    loginModal.classList.remove("active");
    overlay.classList.remove("active");
    document.body.style.overflow = "auto";
}

// Open Signup Modal
function openSignupModal() {
    signupModal.classList.add("active");
    overlay.classList.add("active");
    document.body.style.overflow = "hidden";
}

// Close Signup Modal
function closeSignupModal() {
    signupModal.classList.remove("active");
    overlay.classList.remove("active");
    document.body.style.overflow = "auto";
}

// Handle Login
function handleLogin(e) {
    e.preventDefault();
    const email = document.getElementById("email").value;
    const password = document.getElementById("password").value;
    
    // Find user account
    const userAccount = userAccounts.find(account => account.email === email && account.password === password);
    
    if (userAccount) {
        // Successful login
        isLoggedIn = true;
        currentUser = userAccount;
        
        // Update UI
        userName.textContent = currentUser.name;
        userInfo.style.display = 'block';
        loginLink.textContent = 'Logout';
        
        // Show transaction history
        transactionHistory.style.display = 'block';
        updateTransactionHistory();
        
        alert("Login successful! Welcome back, " + currentUser.name);
        closeLoginModal();
    } else {
        // Failed login
        loginError.style.display = "block";
    }
}

// Handle Signup
function handleSignup(e) {
    e.preventDefault();
    const name = document.getElementById("signup-name").value;
    const email = document.getElementById("signup-email").value;
    const password = document.getElementById("signup-password").value;
    const confirmPassword = document.getElementById("signup-confirm-password").value;
    
    // Hide previous errors
    signupError.style.display = "none";
    signupSuccess.style.display = "none";
    
    // Validate form
    if (password.length < 6) {
        signupError.textContent = "Password must be at least 6 characters long";
        signupError.style.display = "block";
        return;
    }
    
    if (password !== confirmPassword) {
        signupError.textContent = "Passwords do not match";
        signupError.style.display = "block";
        return;
    }
    
    // Check if email already exists
    if (userAccounts.some(account => account.email === email)) {
        signupError.textContent = "An account with this email already exists";
        signupError.style.display = "block";
        return;
    }
    
    // Create new account
    userAccounts.push({ email, password, name });
    
    // Show success message
    signupSuccess.style.display = "block";
    
    // Clear form
    document.getElementById("signup-form").reset();
    
    // After a delay, switch to login form
    setTimeout(() => {
        closeSignupModal();
        openLoginModal();
        document.getElementById("email").value = email;
    }, 2000);
}

// Handle Logout
function handleLogout(e) {
    e.preventDefault();
    isLoggedIn = false;
    currentUser = null;
    
    // Update UI
    userInfo.style.display = 'none';
    loginLink.textContent = 'Login';
    
    // Hide transaction history
    transactionHistory.style.display = 'none';
    
    alert("You have been logged out.");
}

// Tab Navigation Logic
function showTabByHash(hash) {
    const target = document.querySelector(hash) || document.querySelector("#menu");
    const panes = document.querySelectorAll(".tab-pane");
    const links = document.querySelectorAll("header nav a[href^=\"#\"]");

    panes.forEach(p => p.classList.toggle("active", p === target));
    links.forEach(a => {
        const isActive = a.getAttribute("href") === ("#" + target.id);
        a.classList.toggle("active", isActive);
        a.setAttribute("aria-selected", isActive ? "true" : "false");
    });

    const root = document.getElementById("tab-root");
    if (root) root.focus();
}

// Handle form submission
if (contactForm) {
    contactForm.addEventListener("submit", function(e) {
        e.preventDefault(); // Prevent default form submission

        // Simulate form submission (e.g., send data to a server)
        console.log("Form submitted!");
        // In a real application, you would send the form data to a backend here

        // Display success message
        if (contactSuccessMessage) {
            contactSuccessMessage.style.display = "block";
        }

        // Optionally clear the form
        contactForm.reset();

        // Hide success message after a few seconds
        setTimeout(() => {
            if (contactSuccessMessage) {
                contactSuccessMessage.style.display = "none";
            }
        }, 5000);
    });
}

// Event Listeners
cartIcon.addEventListener("click", openCartModal);
closeCart.addEventListener("click", closeCartModal);
overlay.addEventListener("click", () => {
    closeCartModal();
    closeLoginModal();
    closeSignupModal();
});
checkoutBtn.addEventListener("click", checkout);
loginLink.addEventListener("click", function(e) {
    e.preventDefault();
    if (isLoggedIn) {
        handleLogout(e);
    } else {
        openLoginModal();
    }
});
loginForm.addEventListener("submit", handleLogin);
signupForm.addEventListener("submit", handleSignup);
showSignupLink.addEventListener("click", function(e) {
    e.preventDefault();
    closeLoginModal();
    openSignupModal();
});
showLoginLink.addEventListener("click", function(e) {
    e.preventDefault();
    closeSignupModal();
    openLoginModal();
});

// Category Filter Buttons
categoryBtns.forEach(button => {
    button.addEventListener("click", () => {
        categoryBtns.forEach(btn => btn.classList.remove("active"));
        button.classList.add("active");
        filterMenu(button.dataset.category);
    });
});

// Initialize
displayMenuItems(menuData);

// Initial tab load based on hash or default to #menu
if (!location.hash) {
    history.replaceState(null, "", "#menu");
}
showTabByHash(location.hash);
window.addEventListener("hashchange", () => showTabByHash(location.hash));
    </script>
</body>
</html>
